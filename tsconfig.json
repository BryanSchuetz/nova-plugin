{
  "compilerOptions": {
    "target": "ES6",
    "sourceMap": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ES6"],
    "module": "commonjs",
    "newLine": "LF",
    "outDir": "./dist"
  },
  "files": ["src/main.ts"],
  "include": ["src/*.d.ts"]
}
